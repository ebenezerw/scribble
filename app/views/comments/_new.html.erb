<h3>Add Comment</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit "Leave Comment" %>
    </p>
    <% end %>
