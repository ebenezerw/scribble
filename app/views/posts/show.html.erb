<%= link_to "< Back", posts_path %>
<p>
<div class="well">
<h2><%= @post.title %></h2>
<h5>Author: <%= @post.author %></h5>
<h6>Updated: <%= @post.updated_at.strftime("%m-%d-%Y at %H:%M %Z") %></h6>
<p><%= @post.content %></p>
<p><%= link_to "Edit Post", edit_post_path(@post) %></p>
<%= link_to "Delete Post", post_path(@post), method: :delete %>
</dvi>
<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong><%= comment.author %></strong>: <%= comment.content %>
    <%= link_to 'delete', [comment.post, comment], method: :delete %></p>
</div>
<% end %>


<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.label :author %><br>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</p>
<p>
  <%= f.submit "Leave Comment" %>
</p>
<% end %>
